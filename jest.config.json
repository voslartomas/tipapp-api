{
  "globals": {
    "ts-jest": {
      "tsConfigFile": "./tsconfig.json"
    }
  },
  "moduleFileExtensions": [
    "ts",
    "js",
    "json"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
  },
  "testMatch": [
    "**/test/**/*.spec.(ts|js)"
  ],
  "testEnvironment": "node",
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 60,
      "lines": 80,
      "statements": 80
    }
  }
}
